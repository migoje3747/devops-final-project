{
  "id": null,
  "uid": "flask-devops-lab",
  "title": "Flask DevOps Lab Metrics",
  "tags": ["flask", "prometheus", "devops"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "editable": true,
  "panels": [
    {
      "type": "stat",
      "title": "Total de visitas",
      "targets": [
        { "expr": "app_visits_total" }
      ]
    },
    {
      "type": "stat",
      "title": "Total de errores",
      "targets": [
        { "expr": "app_errors_total" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests por endpoint",
      "targets": [
        { "expr": "sum(rate(request_latency_seconds_count[1m])) by (endpoint)" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latencia promedio por endpoint",
      "targets": [
        { "expr": "sum(rate(request_latency_seconds_sum[5m])) by (endpoint) / sum(rate(request_latency_seconds_count[5m])) by (endpoint)" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latencia p95 por endpoint",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(request_latency_seconds_bucket[5m])) by (le, endpoint))" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Duración promedio /calculate",
      "targets": [
        { "expr": "rate(calculate_duration_seconds_sum[5m]) / rate(calculate_duration_seconds_count[5m])" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Duración p90 /calculate",
      "targets": [
        { "expr": "histogram_quantile(0.90, sum(rate(calculate_duration_seconds_bucket[5m])) by (le))" }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "targets": [
        { "expr": "100 - (avg by(instance)(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (bytes)",
      "targets": [
        { "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk Usage (%)",
      "targets": [
        { "expr": "(node_filesystem_size_bytes{fstype!=\"tmpfs\"} - node_filesystem_free_bytes{fstype!=\"tmpfs\"}) / node_filesystem_size_bytes{fstype!=\"tmpfs\"} * 100" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network Receive (bytes/s)",
      "targets": [
        { "expr": "rate(node_network_receive_bytes_total[5m])" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network Transmit (bytes/s)",
      "targets": [
        { "expr": "rate(node_network_transmit_bytes_total[5m])" }
      ]
    },
    {
      "type": "alertlist",
      "title": "Prometheus Alerts",
      "datasource": "Prometheus"
    }
  ]
}
